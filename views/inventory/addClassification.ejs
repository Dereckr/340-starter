<!-- Content heading -->
<% if (title){ %> <%#EJS Code Block to contain JS if structure if a title exists  %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    <!-- Message Block -->
     <%- messages()  %>

     <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>


    
    <!-- Form Display -->

    <form action="/inv/addClassification" method="post">
        <fieldset>
            <h2>Classification Name</h2>
            <div>NAME MUST BE ALPHABETIC CHARACTERS ONLY</div>
            <label for="classification_name">First Name</label>
            <input type="text" id="classification_name" name="classification_name" pattern="[a-zA-Z]+" required value="<%= locals.classification_name %>"><br>
            <input type="submit" value="Add Classification">
        </fieldset>
    </form> <%# Contains HTML %>
    <script src="/js/script.js"></script>