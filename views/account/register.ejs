<!-- Content heading -->
<% if (title){ %> <%#EJS Code Block to contain JS if structure if a title exists  %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    <!-- Message Block -->
     <%- messages()  %>

     <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
    
    <!-- Form Display -->

    <form action="/account/register" method="post">
        <fieldset>
            <h2>Register</h2>
            <label for="account_firstname">First Name</label>
            <input type="text" id="account_firstname" name="account_firstname" required><br>
            <label for="account_lastname">Last Name</label>
            <input type="text" id="account_lastname" name="account_lastname" required><br>
            <label for="account_email">Email address:</label>
            <input type="email" id="account_email" name="account_email" required><br>
            <label for="account_password">Password:</label>
            <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
            <div>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character</div>
            <input type="submit" value="Register">
        </fieldset>
    </form> <%# Contains HTML %>
    <script src="/js/script.js"></script>