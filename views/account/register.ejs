<!-- Content heading -->
<% if (title){ %> <%#EJS Code Block to contain JS if structure if a title exists  %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    <!-- Message Block -->
     <%- messages()  %>
    
    <!-- Form Display -->

    <form action="/account/register" method="post">
        <fieldset>
            <h2>Register</h2>
            <label for="account_firstname">First Name</label>
            <input type="text" id="account_firstname" name="account_firstname"><br>
            <label for="account_lastname">Last Name</label>
            <input type="text" id="account_lastname" name="account_lastname"><br>
            <label for="account_email">Email address:</label>
            <input type="email" id="account_email" name="account_email"><br>
            <label for="account_password">Password:</label>
            <input type="password" id="account_password" name="account_password"><br>
            <input type="submit" value="Register">
            <p>Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character</p>
        </fieldset>
    </form> <%# Contains HTML %>
    <script src="/js/script.js"></script>