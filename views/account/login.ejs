<!-- Content heading -->
<% if (title){ %> <%#EJS Code Block to contain JS if structure if a title exists  %>
    <h1><%= title %></h1>
    <% } else {
        res.redirect('/')
    } %>
    <!-- Message Block -->
     <%- messages() %>

     <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
      <%  }) %>
       </ul>
      <% } %>
    <!-- Login Display -->
    <form id="loginForm" action="/account/login" method="post">
        <fieldset>
            
            <label for="account_email">Email:</label>
            <input type="email" id="account_email" name="account_email" required><br>
            <label for="account_password">Password:</label>
            <input type="password" id="account_password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
            <input type="submit" value="Login">
            <p>No account? <a href="/account/registration">Sign-up</a></p>
        </fieldset>
    </form> <%# Contains HTML %>
    <script src="/js/script.js"></script>